<IfModule mod_rewrite.c>
    <IfModule mod_negotiation.c>
        Options -MultiViews -Indexes
    </IfModule>

    RewriteEngine On


# PWA - Service Worker must be served from root with correct MIME type
    # Only process sw.js if file exists, otherwise let Laravel handle it
    RewriteCond %{REQUEST_URI} ^/sw\.js$ [NC]
    RewriteCond %{REQUEST_FILENAME} -f
    RewriteRule ^sw\.js$ sw.js [L,NC]

    # PWA - Manifest with correct MIME type
    <FilesMatch "manifest\.json$">
        Header set Content-Type "application/manifest+json"
        Header set Cache-Control "public, max-age=3600"
    </FilesMatch>

    # PWA - Service Worker with correct headers
    <FilesMatch "sw\.js$">
        Header set Content-Type "application/javascript"
        Header set Service-Worker-Allowed "/"
        Header set Cache-Control "no-cache, no-store, must-revalidate"
    </FilesMatch>

    # PWA - Offline page
    <FilesMatch "offline\.html$">
        Header set Cache-Control "public, max-age=86400"
    </FilesMatch>

    # Handle Authorization Header
    RewriteCond %{HTTP:Authorization} .
    RewriteRule .* - [E=HTTP_AUTHORIZATION:%{HTTP:Authorization}]

    # Handle X-XSRF-Token Header
    RewriteCond %{HTTP:x-xsrf-token} .
    RewriteRule .* - [E=HTTP_X_XSRF_TOKEN:%{HTTP:X-XSRF-Token}]

    # Redirect Trailing Slashes If Not A Folder...
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_URI} (.+)/$
    RewriteRule ^ %1 [L,R=301]

    # Send Requests To Front Controller...
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteRule ^ index.php [L]
</IfModule>
